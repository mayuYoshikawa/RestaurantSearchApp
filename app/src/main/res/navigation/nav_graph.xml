<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/topFragment">

    <fragment
        android:id="@+id/topFragment"
        android:name="com.example.restaurantsearchapp.fragment.TopFragment"
        android:label="fragment_top"
        tools:layout="@layout/fragment_top" >
        <action
            android:id="@+id/action_topFragment_to_showAllFragment"
            app:destination="@id/showAllFragment" />
        <argument
            android:name="inputData"
            android:defaultValue="0"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/showAllFragment"
        android:name="com.example.restaurantsearchapp.fragment.ShowAllFragment"
        android:label="fragment_show_all"
        tools:layout="@layout/fragment_show_all" />
</navigation>